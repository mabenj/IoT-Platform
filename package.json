{
    "name": "iot-platform",
    "version": "1.0.0",
    "main": "/dist/api/app.js",
    "repository": "https://github.com/mabenj/IoT-Platform.git",
    "author": "mabeja@utu.fi, eljuse@utu.fi",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "tsc",
        "build:client": "mkdir dist && rm -rf dist/client-app && cd src/client-app && yarn install &&  yarn run build && mv build ../../dist/client-app",
        "start": "cross-env NODE_ENV=production node dist/api/app.js",
        "dev:api": "nodemon --ignore src/api/demo src/api/app.ts",
        "dev:client": "cd src/client-app && npm run dev:client",
        "demo-device": "npx ts-node src/api/demo/sendDeviceData.ts"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "coap": "^1.0.8",
        "cross-env": "^7.0.3",
        "date-fns": "^2.29.3",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-async-errors": "^3.1.1",
        "mongoose": "^6.3.1",
        "nanoid": "^3.3.3",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.2.0",
        "@types/express": "^4.17.13",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^17.0.25",
        "nodemon": "^2.0.15",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}
